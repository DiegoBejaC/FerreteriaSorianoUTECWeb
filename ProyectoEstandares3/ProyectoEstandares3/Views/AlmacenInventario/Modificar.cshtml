@model ProyectoEstandares3.Models.Almacen_Inventario

@{
    ViewBag.Title = "Modificar producto dentro del almacen";
}

<h2>Modificar producto dentro del almacen</h2>


@using (Html.BeginForm("Actualizar", "AlmacenInventario", new { ReturnUrl = ViewBag.ReturnUrl, Exis = ViewBag.ExisAnterior }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @{
        if (!string.IsNullOrEmpty(ViewBag.alerta))
        {
            // Message tiene un valor
            <div class="alert alert-danger">@ViewBag.alerta</div>
        }
    }

    <dl class="dl-horizontal">
        <dt>
            Cantidad de existencia anterior:
        </dt>

        <dd>
            @ViewBag.ExisAnterior
        </dd>
    </dl>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id_almacen)

    @Html.HiddenFor(model => model.Id_inventario)

    <div class="form-group">
        @Html.LabelFor(model => model.Existencia, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Existencia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Existencia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Modificar" class="btn btn-default" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <font color="green">@ViewBag.mensaje</font>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
