@model IEnumerable<ProyectoEstandares3.Models.Inventario>

@{
    ViewBag.Title = "Lista de productos";
}

<h2>Lista de productos</h2>

<p>
    @Html.ActionLink("Crear nuevo producto", "Guardar")
</p>
<br />
<p>
    @Html.ActionLink("Categorias", "Index", "Categorias")
</p>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <font color="green">@ViewBag.mensaje</font>
    </div>
</div>
<table class="table" style="background-color:white">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockMinimo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockMaximo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Existencia)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockMinimo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockMaximo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Existencia)
            </td>
            <td>
                @Html.ActionLink("Kardex", "MostrarKardex", new { id = item.Id }) |---|
                @Html.ActionLink("Editar", "Modificar", new { id = item.Id }) |
                @Html.ActionLink("Ver", "Detalle", new { id = item.Id }) |
                @Html.ActionLink("Borrar", "Eliminar", new { id = item.Id })
            </td>
        </tr>
    }

</table>
