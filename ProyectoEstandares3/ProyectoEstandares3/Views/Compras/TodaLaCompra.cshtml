@model IEnumerable<ProyectoEstandares3.Models.ComprasDetalle>

@{
    ViewBag.Title = "Detalles de la Compra";
}

<h2>Detalles de la Compra</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Compras.Id)
        </dt>

        <dd>
            @ViewBag.CompraID
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Compras.Documento)
        </dt>

        <dd>
            @ViewBag.CompraDocumento
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Compras.Proveedor)
        </dt>

        <dd>
            @ViewBag.CompraProveedor
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Compras.Fecha)
        </dt>

        <dd>
            @ViewBag.CompraFecha
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Compras.Sumas)
        </dt>

        <dd>
            @ViewBag.CompraSumas
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Compras.Iva)
        </dt>

        <dd>
            @ViewBag.CompraIva
        </dd>
    </dl>
</div>


<hr>

<h2>Detalles de la compra</h2>

<table class="table" style="background-color:white">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Inventario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Almacen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioTotal)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Inventario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Almacen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioTotal)
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Regresar", "Index", "Compras")
</div>
