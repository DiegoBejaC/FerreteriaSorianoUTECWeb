@model IEnumerable<ProyectoEstandares3.Models.ComprasDetalle>

@{
    ViewBag.Title = "Detalles de la Compra";
}

<h2>Detalles de la compra</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Compras.Id)
        </dt>

        <dd>
            @ViewBag.CompraID
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Compras.Documento)
        </dt>

        <dd>
            @ViewBag.CompraDocumento
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Compras.Proveedor)
        </dt>

        <dd>
            @ViewBag.CompraProveedorNombre
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Compras.Fecha)
        </dt>

        <dd>
            @ViewBag.CompraFecha
        </dd>

    </dl>
</div>


<hr>
<br>
@Html.ActionLink("Agregar nuevo registro para la compra", "AgregarDetallesCompra", new { id = ViewBag.CompraID , idinventario = 0, idalmacen = 0, cantid = 0, prec = 0, total = ViewBag.CompraPrecioTotal , mensaje = ""})
<br>
<table class="table" style="background-color:white">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Inventario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Almacen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioTotal)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Inventario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Almacen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioTotal)
            </td>
            <td>
                @Html.ActionLink("Borrar", "Eliminar", new { id = item.Id , id_doc = ViewBag.CompraID, todoElPrecio = ViewBag.CompraPrecioTotal })
            </td>
        </tr>
    }
</table>

<div>
    <dl class="dl-horizontal">
        <dt>
            Precio total de la compra:
        </dt>
        <dd>
            @ViewBag.CompraPrecioTotal
        </dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Finalizar compra", "CompraFinalizada", new { fecha = ViewBag.FechaNoVisible, id = ViewBag.CompraID, idDoc = ViewBag.CompraDocumento, idProv = ViewBag.CompraProveedor, total = ViewBag.CompraPrecioTotal })
</div>

