@model IEnumerable<ProyectoEstandares3.Models.DetalleEgreso>

@{
    ViewBag.Title = "Detalles del Egreso";
}

<h2>Detalles del Egreso</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.HojaEgreso.Id)
        </dt>

        <dd>
            @ViewBag.EgresoID
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HojaEgreso.Fecha)
        </dt>

        <dd>
            @ViewBag.EgresoFecha
        </dd>

    </dl>
</div>


<hr>
<br>
@Html.ActionLink("Agregar nuevo registro para el egreso", "AgregarRegistrosEgreso", new { id = ViewBag.EgresoID, idinventario = 0, idalmacen = 0, cantid = 0, prec = 0, total = ViewBag.EgresoPrecioTotal, mensaje = "" })
<br>
<table class="table" style="background-color:white">
    <tr>
        <th>
            Inventario
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Almacen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioTotal)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Inventario2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Almacen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioTotal)
            </td>
            <td>
                @Html.ActionLink("Borrar", "Eliminar", new { id = item.Id_detalle, id_doc = ViewBag.EgresoID, todoElPrecio = ViewBag.EgresoPrecioTotal })
            </td>
        </tr>
    }
</table>

<div>
    <dl class="dl-horizontal">
        <dt>
            Precio total del egreso:
        </dt>
        <dd>
            @ViewBag.EgresoPrecioTotal
        </dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Finalizar egreso", "EgresoFinalizado", new { fecha = ViewBag.FechaNoVisible, id = ViewBag.EgresoID, total = ViewBag.EgresoPrecioTotal })
</div>