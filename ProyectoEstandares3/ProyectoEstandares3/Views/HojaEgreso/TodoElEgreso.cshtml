@model IEnumerable<ProyectoEstandares3.Models.DetalleEgreso>

@{
    ViewBag.Title = "Detalles del Egreso";
}

<h2>Detalles del Egreso</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.HojaEgreso.Id)
        </dt>

        <dd>
            @ViewBag.EgresoID
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HojaEgreso.Suma)
        </dt>

        <dd>
            @ViewBag.EgresoSuma
        </dd>
    </dl>
</div>


<hr>
<table class="table" style="background-color:white">
    <tr>
        <th>
            Inventario
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Almacen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioTotal)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Inventario2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Almacen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioTotal)
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Regresar", "Index", "HojaEgreso")
</div>
