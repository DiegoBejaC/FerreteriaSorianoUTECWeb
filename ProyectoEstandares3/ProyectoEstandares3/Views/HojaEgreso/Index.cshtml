@model IEnumerable<ProyectoEstandares3.Models.HojaEgreso>

@{
    ViewBag.Title = "Hojas de egreso";
}

<h2>Hojas de egreso</h2>
<br />
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <font color="green">@ViewBag.confirmacion</font>
    </div>
</div>
<br />
<p>
    @Html.ActionLink("Registrar nuevo egreso", "Guardar")
</p>
<table class="table" style="background-color:white">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Suma)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @(String.Format("{0:yyyy/MM/dd}", item.Fecha))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suma)
            </td>
            <td>
                @Html.ActionLink("Detalles", "TodoElEgreso", new { id = item.Id })
            </td>
        </tr>
    }

</table>
